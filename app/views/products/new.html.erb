
<div class="container p-3 my-3 border">
  <h1>Create New Product</h1>
</div>

<div class="container p-3 my-3 border">
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, {class:"form-control", placeholder:"Enter the name of the product"}%>
    </div>
    <div class="form-group">
      <%= f.label :original_cost %>
      <%= f.number_field :original_cost, {class:"form-control", placeholder:"Enter the store value"}%>
    </div>
    <div class="form-group">
      <%= f.label :goal_amount %>
      <%= f.number_field :goal_amount, {class:"form-control", placeholder:"Enter your goal amount"}%>
      
    </div> 
    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, {class:"form-control", placeholder:"Enter end date"}%>
    </div>

    <div class="form-group">
      <%= f.label :img_url %>
      <%= f.url_field :img_url, {class:"form-control", placeholder:"Enter a Image"}%>
    </div>

    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, {class:"form-control", placeholder:"Please enter a short summary about this product and why you think it should go plastic free."}%>
    </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit "Submit", class:"btn btn-outline-success" %>
  <%end%>
</div>
