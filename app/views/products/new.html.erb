
<div class="container p-3 my-3 border">
  <h1>Make A New Funding</h1>
</div>

<div class="container p-3 my-3 border">
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, {class:"form-control", placeholder:"Enter the name of the product"}%>
    </div>
    <div class="form-group">
      <%= f.label :original_cost %>
      <%= f.number_field :original_cost, {class:"form-control", placeholder:"Enter The Store Value"}%>
    </div>
    <div class="form-group">
      <%= f.label :goal_amount %>
      <%= f.number_field :goal_amount, {class:"form-control", placeholder:"Enter How much You would collect"}%>
      
    </div> 
    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, {class:"form-control", placeholder:"Enter a end date"}%>
    </div>

    <div class="form-group">
      <%= f.label :img_url %>
      <%= f.url_field :img_url, {class:"form-control", placeholder:"Enter a Image"}%>
    </div>

    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, {class:"form-control", placeholder:"Please enter a Short summary of why this product should be backed."}%>
    </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit "Submit", class:"btn btn-outline-success" %>
  <%end%>
</div>
