<%= form_for  @product_funding do |form| %>
<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">CONFIRM</h5><br>
            <form class="form-signin">
            <h5 class="card-title text-center"><%= current_user.name %></h5>
            <h5 class="card-title text-center">$<%= current_funding.amount %></h5>
            <%= form.hidden_field :funding_id, :value => current_funding.id %>
            <h6 class="card-title text-center"><%= current_product.name %></h6><br>
            <%= form.hidden_field :product_id, :value => current_product.id %>
